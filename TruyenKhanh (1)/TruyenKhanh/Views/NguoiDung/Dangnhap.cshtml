@model TruyenKhanh.Models.NguoiDung

@{
    ViewBag.Title = "Dangnhap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="header">
    <img src="~/Content/Images/logo1.png" width="1200" height="300" />
</div>

<h4 style="color:red;text-align:center">@ViewBag.Thongbao</h4>
<table align="center">
    <h3 style="text-align:center;background-color:#f3f3f3;padding:10px">Đăng nhập </h3>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height: 40px; background-color: white">
            <td>Tên đăng nhập:</td>
            <td>
                <span style="color: red; font-style: italic; background-color: white">
                    @Html.TextBox("TenDangNhap")@ViewData["Loi1"]
                </span>
            </td>
        </tr>
        <tr style="height: 40px; background-color: white">
            <td>Mật khẩu :</td>
            <td>
                <span style="color: red; font-style: italic; background-color: white">
                    @Html.Password("MatKhau")@ViewData["Loi2"]
                </span>
            </td>
        </tr>
        <tr style="height: 40px; background-color: white">
            <td></td>
            <td>
                <input type="submit" value="Đăng nhập " />
            </td>
        </tr>
    }

</table>
<div>
    <h3 style="text-align:center">Nếu chưa có tài khoản , vui lòng click <a href="@Url.Action("DangKy","NguoiDung")"style="background-color:orange">Đăng ký!!!</a></h3>
</div>
