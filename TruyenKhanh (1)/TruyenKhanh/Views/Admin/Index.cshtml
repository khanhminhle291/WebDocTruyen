            <style src="Style.css">
                * {
                    box-sizing: border-box;
                    margin: 0px;
                    padding: 0px;
                }

                .slider {
                    width: 100%;
                    margin: 0 auto;
                    overflow: hidden;
                    padding-top: 0px;
                }

                .slider-imgs {
                    display: flex;
                }

                    .slider-imgs img {
                        width: 100%;
                    }

                    .slider-imgs input {
                        display: none;
                    }

                .labelslider {
                    display: flex;
                    justify-content: center;
                }

                    .labelslider label {
                        background-image: linear-gradient(135deg, #008aff, #86d472);
                        border-radius: 10px;
                        border: 1px solid blue;
                        color: #ffffff;
                        display: block;
                        height: 15px;
                        width: 70px;
                        padding: 10px;
                        position: relative;
                        text-decoration: none;
                        width: 70px;
                        z-index: 2;
                        margin: -25px 15px;
                    }

                        .labelslider label:hover {
                            background: #00ff90;
                        }

                #img1:checked ~ .imgslider1 {
                    margin-left: -100%
                }

                #img2:checked ~ .imgslider2 {
                    margin-left: -200%
                }

                #img3:checked ~ .imgslider3 {
                    margin-left: -300%
                }
            </style>
